---
// src/components/Header.astro
const base = import.meta.env.BASE_URL;
---
<header class="sticky top-0 z-50 bg-white/80 shadow-sm backdrop-blur-md">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 sm:px-6 lg:px-8">
        {/* Logo and Site Title */}
        <a href={base} class="flex items-center gap-3">
            <img src={`${base}logo.svg`} alt="The Latina Sweat Project Logo" class="h-10 w-10">
            <span class="text-xl font-bold text-off-black">The Latina Sweat Project</span>
        </a>

        {/* Desktop Navigation */}
        <nav id="desktop-menu" class="hidden items-center gap-8 lg:flex">
            <a href={base} class="text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Home</a>
            <a href={`${base}about`} class="text-base font-medium text-medium-gray transition hover:text-vibrant-pink">About Us</a>
            <a href={`${base}classes`} class="text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Classes</a>
            <a href={`${base}events`} class="text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Events</a>
            <a href={`${base}contact`} class="text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Contact</a>
        </nav>

        {/* CTA Button and Mobile Menu Icon */}
        <div class="flex items-center gap-4">
            <a href={`${base}classes`} class="hidden rounded-full bg-vibrant-pink px-6 py-2.5 text-sm font-bold text-white shadow-md transition-transform hover:scale-105 sm:block">
                Book a Class
            </a>
            <button id="mobile-menu-button" class="lg:hidden">
                <svg class="h-6 w-6 text-off-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
                </svg>
            </button>
        </div>
    </div>
    {/* Mobile Menu */}
    <nav id="mobile-menu" class="hidden lg:hidden">
        <a href={base} class="block px-4 py-2 text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Home</a>
        <a href={`${base}about`} class="block px-4 py-2 text-base font-medium text-medium-gray transition hover:text-vibrant-pink">About Us</a>
        <a href={`${base}classes`} class="block px-4 py-2 text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Classes</a>
        <a href={`${base}events`} class="block px-4 py-2 text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Events</a>
        <a href={`${base}contact`} class="block px-4 py-2 text-base font-medium text-medium-gray transition hover:text-vibrant-pink">Contact</a>
    </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>