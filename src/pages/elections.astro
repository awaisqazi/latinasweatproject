---

<Layout title="Junior Board Election | The Latina Sweat Project">
    <Header />
    <main>
        {/* Page Header */}
        <section
            class="bg-gradient-to-br from-light-gray to-pink-50 py-16 sm:py-24"
        >
            <div class="mx-auto max-w-5xl px-4 text-center sm:px-6 lg:px-8">
                <span
                    class="rounded-full bg-vibrant-pink/10 px-4 py-1.5 font-sans text-sm font-bold uppercase tracking-wider text-vibrant-pink"
                >
                    Voting Period: Dec 9 - Dec 10
                </span>
                <h1
                    class="mt-6 font-sans text-4xl font-extrabold tracking-tight text-off-black sm:text-5xl"
                >
                    LSP Junior Board Elections
                </h1>
                <p
                    class="mx-auto mt-6 max-w-3xl font-body text-xl leading-relaxed text-medium-gray"
                >
                    Get to know the incredible leaders stepping up to serve our
                    community.
                </p>
            </div>
        </section>

        {/* Eligibility Info - moved up */}
        <section class="relative -mt-12 px-4 pb-12 sm:px-6">
            <div class="mx-auto max-w-4xl">
                <div
                    class="rounded-2xl bg-gradient-to-br from-slate-50 to-pink-50 p-8 shadow-lg ring-1 ring-black/5"
                >
                    <h3
                        class="font-sans text-xl font-bold text-off-black flex items-center gap-3 mb-4"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-vibrant-pink"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        Who Can Vote?
                    </h3>
                    <ul
                        class="list-inside list-disc space-y-2 font-body text-gray-700 ml-9"
                    >
                        <li>LSP Instructors</li>
                        <li>Yoga Teacher Training (YTT) Students</li>
                        <li>Current Board Members</li>
                    </ul>
                    <p class="mt-4 text-sm text-gray-500 italic ml-9">
                        Please review all candidates below before casting your
                        vote. Voting eligibility will be verified after
                        submission.
                    </p>
                </div>
            </div>
        </section>

        {/* Candidates Loop */}
        <div class="space-y-24 bg-white py-12">
            {
                roles.map((role, index) => (
                    <section
                        class={`group relative scroll-mt-24 ${index % 2 !== 0 ? "bg-slate-50 py-24" : "bg-white py-12"}`}
                        id={role.id}
                    >
                        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                            <div class="mb-16 text-center">
                                <h2 class="inline-block border-b-4 border-accent-gold pb-2 font-sans text-4xl font-extrabold uppercase text-off-black tracking-tight">
                                    {role.title}
                                </h2>
                                <p class="mx-auto mt-8 max-w-3xl font-body text-lg leading-relaxed text-gray-600">
                                    {role.responsibilities}
                                </p>
                            </div>

                            <div class="flex flex-wrap justify-center gap-12 lg:gap-16">
                                {role.candidates.map((candidate) => (
                                    <CandidateCard
                                        imageSrc={
                                            candidate.image
                                                ? `${base}images/election/${candidate.image}`
                                                : `${base}images/candidate_placeholder.png`
                                        }
                                        name={candidate.name}
                                        title={`Nominee for ${role.title}`}
                                        story={candidate.bio}
                                    />
                                ))}
                            </div>
                        </div>
                    </section>
                ))
            }
        </div>

        {/* Voting Ballot Section - at bottom with attestation */}
        <section class="bg-off-black py-16" id="vote">
            <div class="mx-auto max-w-4xl px-4 sm:px-6">
                {/* Attestation Gate */}
                <div id="ballot-gate" class="text-center">
                    <h3 class="font-sans text-2xl font-bold text-white mb-4">
                        Ready to Cast Your Vote?
                    </h3>
                    <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
                        Before accessing the ballot, please confirm that you
                        have reviewed all candidate information above. Your vote
                        matters and should be an informed decision.
                    </p>
                    <label
                        class="inline-flex items-center gap-3 cursor-pointer group mb-6"
                    >
                        <input
                            type="checkbox"
                            id="attestation-checkbox"
                            class="w-5 h-5 rounded border-2 border-gray-400 text-vibrant-pink focus:ring-vibrant-pink focus:ring-offset-2 focus:ring-offset-off-black cursor-pointer"
                        />
                        <span
                            class="text-white font-medium group-hover:text-vibrant-pink transition-colors"
                        >
                            I confirm that I have reviewed all candidate
                            information
                        </span>
                    </label>
                    <div>
                        <button
                            id="reveal-ballot-btn"
                            disabled
                            class="mt-4 inline-flex items-center gap-2 bg-vibrant-pink text-white font-bold py-3 px-8 rounded-full opacity-50 cursor-not-allowed transition-all duration-300"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            Access My Ballot
                        </button>
                    </div>
                </div>

                {/* iPhone Troubleshooting Note - visible before ballot */}
                <div
                    class="bg-amber-900/30 border border-amber-600/50 rounded-lg p-4 mb-6 text-sm mt-6"
                >
                    <div class="flex items-start gap-3">
                        <span class="text-xl">üì±</span>
                        <div>
                            <p class="font-semibold text-amber-200 mb-1">
                                Having trouble on iPhone?
                            </p>
                            <p class="text-amber-100/80">
                                If the ballot is not loading or responding
                                properly on your iPhone, please tap the
                                <strong class="text-white">aA</strong> button in
                                Safari's address bar and select
                                <strong class="text-white"
                                    >"Request Desktop Website"</strong
                                >. This is a known issue we're working to
                                resolve.
                            </p>
                        </div>
                    </div>
                </div>

                {/* Ballot Container - hidden initially */}
                <div id="ballot-container" class="hidden">
                    <ElectionBallot roles={roles} client:load />
                </div>
            </div>
        </section>
    </main>
</Layout>

<script>
    const checkbox = document.getElementById("attestation-checkbox");
    const revealBtn = document.getElementById("reveal-ballot-btn");
    const ballotGate = document.getElementById("ballot-gate");
    const ballotContainer = document.getElementById("ballot-container");

    checkbox?.addEventListener("change", (e) => {
        const isChecked = (e.target as HTMLInputElement).checked;
        if (revealBtn) {
            revealBtn.disabled = !isChecked;
            if (isChecked) {
                revealBtn.classList.remove("opacity-50", "cursor-not-allowed");
                revealBtn.classList.add("hover:scale-105", "hover:shadow-lg");
            } else {
                revealBtn.classList.add("opacity-50", "cursor-not-allowed");
                revealBtn.classList.remove(
                    "hover:scale-105",
                    "hover:shadow-lg",
                );
            }
        }
    });

    revealBtn?.addEventListener("click", () => {
        ballotGate?.classList.add("hidden");
        ballotContainer?.classList.remove("hidden");
        // Scroll to ballot
        ballotContainer?.scrollIntoView({
            behavior: "smooth",
            block: "start",
        });
    });
</script>
