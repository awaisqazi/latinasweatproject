---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
---

<Layout title="Schedule | The Latina Sweat Project">
  <Header />
  <main>
    <div class="my-8 px-4">
      <div
        class="mx-auto max-w-4xl rounded-lg border border-red-300 bg-red-50 p-4 text-center"
      >
        <p class="font-semibold text-red-800">
          Please note: Participants must be 12 years of age or older to register
          for and attend classes.
        </p>
      </div>

      {/* Gala Promo Banner */}
      <a
        href="/gala"
        class="group mx-auto mt-4 max-w-4xl flex items-center justify-between gap-4 rounded-xl bg-gradient-to-r from-off-black via-[#1a1a2e] to-off-black p-4 border border-accent-gold/30 hover:border-accent-gold/60 transition-all duration-300 hover:shadow-lg hover:shadow-accent-gold/10"
      >
        <div class="flex items-center gap-3">
          <span class="text-2xl">✨</span>
          <div>
            <p class="text-accent-gold font-bold text-sm sm:text-base">
              Noche Inolvidable – This Thursday!
            </p>
            <p class="text-light-gray/80 text-xs sm:text-sm">
              Join us Dec 11 for our 1920s gala. Limited tickets remaining!
            </p>
          </div>
        </div>
        <div
          class="hidden sm:flex items-center gap-2 text-accent-gold group-hover:text-white transition-colors"
        >
          <span class="text-sm font-semibold">Get Tickets</span>
          <svg
            class="w-4 h-4 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </a>

      {/* iPhone App Promo Banner */}
      <a
        href="https://apps.apple.com/us/app/lsp-studio/id6755971141"
        target="_blank"
        rel="noopener noreferrer"
        class="group mx-auto mt-4 max-w-4xl flex items-center justify-between gap-4 rounded-xl bg-gradient-to-r from-off-black via-[#1a1a2e] to-off-black p-4 border border-accent-gold/30 hover:border-accent-gold/60 transition-all duration-300 hover:shadow-lg hover:shadow-accent-gold/10"
      >
        <div class="flex items-center gap-3">
          <span
            class="flex h-12 w-12 items-center justify-center rounded-lg bg-white p-1.5"
          >
            <img
              src="/images/lsp-studio-logo.png"
              alt="LSP Studio App"
              class="h-full w-full object-contain"
            />
          </span>
          <div>
            <p class="text-accent-gold font-bold text-sm sm:text-base">
              LSP Studio App – Now on iPhone!
            </p>
            <p class="text-light-gray/80 text-xs sm:text-sm">
              Book classes, track workouts & manage your account on the go.
            </p>
          </div>
        </div>
        <div
          class="hidden sm:flex items-center gap-2 text-accent-gold group-hover:text-white transition-colors"
        >
          <span class="text-sm font-semibold">Download</span>
          <svg
            class="w-4 h-4 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </a>
    </div>
    <div class="my-8 px-4 text-center">
      <p class="text-vibrant-pink">
        Trouble viewing the schedule or registering below?
        <a
          href="https://latinasweatproject.marianatools.com/?_mt=/schedule/daily/48541?locations=48717"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold underline transition hover:text-accent-gold"
          >Open in a new window.</a
        >
      </p>
    </div>
    <div data-mariana-integrations="/schedule/daily/48541?locations=48717">
    </div>
  </main>
</Layout>
