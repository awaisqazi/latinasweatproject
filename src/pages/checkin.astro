---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
---

<Layout title="Check-in | The Latina Sweat Project">
	<Header />
	<main>
		<section class="py-16 sm:py-24">
			<div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
				<h1 class="font-sans text-4xl font-extrabold tracking-tighter text-off-black sm:text-5xl">
					Class Check-in
				</h1>
				<p class="mx-auto mt-4 max-w-2xl font-body text-lg text-medium-gray">
					Please fill out the form below to check in for your class. We're excited to have you!
				</p>
			</div>

			<div class="mx-auto mt-12 max-w-4xl px-4 sm:px-6 lg:px-8">
				<div class="form-container">
					<iframe
						src="https://docs.google.com/forms/d/e/1FAIpQLSfAvBqmLp75YCip1FByeleMtgUbiMY_ngjcqZuOp1s6pBtP4Q/viewform?embedded=true"
						class="responsive-iframe"
						frameborder="0"
						marginheight="0"
						marginwidth="0">Loadingâ€¦</iframe
					>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.form-container {
		position: relative;
		overflow: hidden;
		padding-top: 128.6%; /* Aspect ratio of the form (823 / 640) */
	}
	.responsive-iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}
</style>