<style>
  /* Hero Animations */
  .animate-hero-fade {
    animation: heroFade 0.8s ease-out both;
  }
  .animate-hero-up {
    animation: heroUp 0.8s ease-out 0.2s both;
  }
  .animate-hero-up-delay {
    animation: heroUp 0.8s ease-out 0.4s both;
  }

  @keyframes heroFade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes heroUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Sparkle */
  .sparkle {
    display: inline-block;
    color: var(--color-accent-gold);
    animation: sparkle-pulse 2s ease-in-out infinite;
  }
  @keyframes sparkle-pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.3);
    }
  }

  /* Stat Cards */
  .stat-card {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }
  .stat-card.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Timeline */
  .timeline-container {
    position: relative;
    padding: 3rem 0 1rem;
  }
  .timeline-track {
    position: absolute;
    top: 50%;
    left: 5%;
    right: 5%;
    height: 3px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    transform: translateY(-50%);
  }
  .timeline-progress {
    height: 100%;
    width: 0;
    background: linear-gradient(
      90deg,
      var(--color-accent-gold),
      var(--color-vibrant-pink)
    );
    border-radius: 4px;
    transition: width 1.5s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .timeline-container.revealed .timeline-progress {
    width: 100%;
  }

  .timeline-steps {
    display: flex;
    justify-content: space-between;
    position: relative;
    padding: 0 5%;
  }
  .timeline-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.5s ease-out,
      transform 0.5s ease-out;
    transition-delay: var(--delay);
  }
  .timeline-container.revealed .timeline-step {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--color-accent-gold);
    border: 3px solid var(--color-off-black);
    box-shadow: 0 0 12px rgba(255, 189, 89, 0.4);
    margin-bottom: 0.75rem;
  }
  .timeline-value {
    font-family: var(--font-sans);
    font-weight: 800;
    font-size: 1.75rem;
    color: white;
    line-height: 1;
  }
  .timeline-month {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.4);
    margin-top: 0.25rem;
  }

  /* Milestone Cards */
  .milestone-card {
    opacity: 0;
    transform: translateY(24px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out,
      border-color 0.4s,
      background-color 0.4s,
      box-shadow 0.4s;
    transition-delay: var(--delay);
  }
  .milestone-card.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive Timeline */
  @media (max-width: 640px) {
    .timeline-value {
      font-size: 1.25rem;
    }
    .timeline-dot {
      width: 12px;
      height: 12px;
    }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered reveals
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("revealed");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.15, rootMargin: "0px 0px -40px 0px" },
    );

    document.querySelectorAll("[data-reveal]").forEach((el) => {
      observer.observe(el);
    });

    // Also reveal stat-cards and milestone-cards
    document.querySelectorAll(".stat-card, .milestone-card").forEach((el) => {
      observer.observe(el);
    });
  });
</script>
