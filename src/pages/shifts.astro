---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import VolunteerApp from "../components/VolunteerApp.svelte";
---

<Layout title="Volunteer Shifts | The Latina Sweat Project">
    <Header />
    <main class="min-h-screen bg-gray-50">
        <!-- Hero Section -->
        <div class="bg-off-black text-white py-16 px-4">
            <div class="max-w-7xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold font-rubik mb-4">
                    Volunteer Shifts
                </h1>
                <p class="text-xl text-gray-300 max-w-2xl mx-auto">
                    Join our community and help us empower through movement.
                    Sign up for shifts below.
                </p>
            </div>
        </div>

        <!-- App Container -->
        <div class="py-8">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-8">
                <div class="rounded-md bg-red-50 p-4 border border-red-200">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg
                                class="h-5 w-5 text-red-400"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                Known Issue on iOS/iPhone
                            </h3>
                            <div class="mt-2 text-sm text-red-700">
                                <p>
                                    We are experiencing interface issues on
                                    iPhone and iOS Safari browsers. Please try <strong
                                        >"Request Desktop Website"</strong
                                    > in your browser menu or switch to a desktop
                                    computer.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-4">
                <div class="rounded-md bg-amber-50 p-4 border border-amber-200">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg
                                class="h-5 w-5 text-amber-400"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-amber-800">
                                Important Policy Note
                            </h3>
                            <div class="mt-2 text-sm text-amber-700">
                                <p>
                                    Please note: For the safety and focus of our
                                    community, we kindly ask that you do not
                                    bring children to your volunteer shifts.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-4">
                <div class="rounded-md bg-blue-50 p-4 border border-blue-200">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <svg
                                class="h-5 w-5 text-blue-400"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm text-blue-700">
                                Once you have signed up for a shift, please
                                remember to see a lead to check in when you
                                arrive.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-8">
                <div
                    class="rounded-md bg-white p-6 shadow border border-gray-100"
                >
                    <h3 class="font-sans text-xl font-bold text-off-black">
                        Volunteer Rules & Tracking Hours
                    </h3>
                    <ul
                        class="mt-4 list-disc list-inside space-y-2 font-body text-medium-gray text-sm md:text-base"
                    >
                        <li>Maximum of 1 hour per day.</li>
                        <li>
                            Shifts must be completed consecutively before or
                            after class, not split.
                        </li>
                        <li>
                            Remember to see a lead to check in when you arrive
                            for your shift.
                        </li>
                        <li>
                            Complete your required hours each month to maintain
                            your membership benefits.
                        </li>
                    </ul>
                </div>
            </div>
            <VolunteerApp client:load />
        </div>
    </main>
</Layout>
