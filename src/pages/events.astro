---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import EventCard from "@/components/EventCard.astro";
const base = import.meta.env.BASE_URL;
---

<Layout title="Events | The Latina Sweat Project">
  <Header />
  <main>
    {/* START: Page Header Section */}
    <section class="bg-light-gray py-16 md:py-24">
      <div class="mx-auto max-w-7xl px-4 text-center">
        <h1
          class="font-sans text-4xl font-extrabold tracking-tight text-off-black sm:text-5xl md:text-6xl"
        >
          Our Events
        </h1>
        <p class="mx-auto mt-4 max-w-2xl font-body text-lg text-medium-gray">
          Join our vibrant community. Sweat, dance, and connect at our upcoming
          events.
        </p>
      </div>
    </section>
    {/* END: Page Header Section */}

    {/* START: Upcoming Events Section */}
    <section class="py-16 md:py-24">
      <div class="mx-auto max-w-7xl px-4">
        <h2
          class="mb-12 text-center font-sans text-3xl font-bold text-off-black sm:text-4xl"
        >
          Upcoming Events
        </h2>
        {
          /* We are reusing the EventCard component we already built for the homepage */
        }
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          <EventCard
            href="https://www.zeffy.com/en-US/ticketing/equal-hope-x-latina-sweat-project"
            target="_blank"
            imageSrc={`${base}images/equal-hope-event.png`}
            date="JANUARY 31, 2026"
            title="Equal Hope × LSP: Movement, Art, and Wellness ✨"
            description="FREE community wellness event! Join us for therapeutic dance with Maria Luisa, LCPC, educational discussion with Gina Menyah, BSN, RN, free food & drinks, and local vendors. Registration required!"
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
{/* END: Upcoming Events Section */}
