<script>
  const carousel = document.getElementById("events-carousel");
  const leftBtn = document.getElementById("scroll-left");
  const rightBtn = document.getElementById("scroll-right");
  const swipeHint = document.getElementById("swipe-hint");

  if (carousel) {
    // Mobile Swipe Hint Logic
    if (swipeHint) {
      const hideHint = () => {
        swipeHint.style.opacity = "0";
        // Remove listener after hiding to avoid unnecessary calls
        carousel.removeEventListener("scroll", hideHint);
      };
      carousel.addEventListener("scroll", hideHint, { passive: true });

      // Also hide if user clicks/touches
      carousel.addEventListener("touchstart", hideHint, { passive: true });
    }

    // Desktop Button Logic
    if (leftBtn && rightBtn) {
      leftBtn.addEventListener("click", () => {
        carousel.scrollBy({ left: -carousel.offsetWidth, behavior: "smooth" });
      });

      rightBtn.addEventListener("click", () => {
        carousel.scrollBy({ left: carousel.offsetWidth, behavior: "smooth" });
      });
    }

    // Desktop Edge Scrolling Logic
    let scrollInterval: number | null = null;
    const scrollSpeed = 5; // Pixels per frame
    const edgeThreshold = 100; // Distance from edge to trigger scroll

    const startScrolling = (direction: "left" | "right") => {
      if (scrollInterval) return;

      scrollInterval = window.setInterval(() => {
        if (direction === "left") {
          carousel.scrollLeft -= scrollSpeed;
        } else {
          carousel.scrollLeft += scrollSpeed;
        }
      }, 16); // ~60fps
    };

    const stopScrolling = () => {
      if (scrollInterval) {
        clearInterval(scrollInterval);
        scrollInterval = null;
      }
    };

    carousel.addEventListener("mousemove", (e) => {
      // Only enable on desktop (check if hover is supported roughly)
      if (window.matchMedia("(hover: hover)").matches) {
        const rect = carousel.getBoundingClientRect();
        const x = e.clientX - rect.left;

        if (x < edgeThreshold) {
          startScrolling("left");
        } else if (x > rect.width - edgeThreshold) {
          startScrolling("right");
        } else {
          stopScrolling();
        }
      }
    });

    carousel.addEventListener("mouseleave", stopScrolling);
  }
</script>

