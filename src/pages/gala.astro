---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import JuniorBoardCarousel from '../components/JuniorBoardCarousel.svelte';
const base = import.meta.env.BASE_URL;

const sponsors = [
  { name: 'Chicago Community Loan Fund', logo: `${base}images/galalogos/Chicago Community Loan Fund.png`, url: 'https://cclfchicago.org/', tier: 'raiz' },
