              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
    {/* END: Meet Our New Junior Board Section */}

    {/* START: Special Thanks to Sponsors Section */}
    <section class="bg-light-gray py-12 sm:py-16 lg:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-3xl text-center">
          <p class="font-sans text-base font-semibold uppercase tracking-wider text-vibrant-pink">üíõ With Gratitude üíõ</p>
          <h2 class="mt-2 font-sans text-3xl font-bold tracking-tight text-off-black sm:text-4xl">A Special Thanks to Our Sponsors</h2>
          <p class="mt-4 font-body text-lg text-medium-gray">
            Our inaugural gala would not have been possible without the incredible generosity of our sponsors. Your support directly funds free yoga programs, teacher training scholarships, and community wellness initiatives across Chicago. Thank you for believing in our mission and investing in our community's wellness future.
          </p>
        </div>
        
        {sponsors.length > 0 ? (
          <div class="mt-12 space-y-12">
            <!-- Sol Sponsors -->
            {solSponsors.length > 0 && (
              <div class="text-center">
                <h3 class="font-sans text-2xl font-bold text-accent-gold">Sol Sponsors</h3>
                <div class="mt-8 flex flex-wrap justify-center gap-8">
                  {solSponsors.map(sponsor => (
                    <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="group flex h-48 w-full max-w-xs items-center justify-center rounded-xl bg-[radial-gradient(circle_at_center,#b5a18d,#ffbd59)] p-8 shadow-md transition-all duration-300 hover:-translate-y-1 hover:bg-[radial-gradient(circle_at_center,#c4b3a1,#ffdb8f)] hover:shadow-2xl">
                      <img class="max-h-32 w-auto drop-shadow-md transition-transform duration-300 group-hover:scale-110" src={sponsor.logo} alt={sponsor.name} />
                    </a>
                  ))}
                </div>
              </div>
            )}
            <!-- Luna Sponsors -->
            {lunaSponsors.length > 0 && (
              <div class="text-center">
                <h3 class="font-sans text-2xl font-bold text-accent-gold">Luna Sponsors</h3>
                <div class="mt-8 flex flex-wrap justify-center gap-8">
                  {lunaSponsors.map(sponsor => (
                    <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="group flex h-40 w-full max-w-[250px] items-center justify-center rounded-xl bg-[radial-gradient(circle_at_center,#b5a18d,#ffbd59)] p-6 shadow-md transition-all duration-300 hover:-translate-y-1 hover:bg-[radial-gradient(circle_at_center,#c4b3a1,#ffdb8f)] hover:shadow-2xl">
                      <img class="max-h-24 w-auto drop-shadow-md transition-transform duration-300 group-hover:scale-110" src={sponsor.logo} alt={sponsor.name} />
                    </a>
                  ))}
                </div>
              </div>
            )}
            <!-- Estrella & Raiz Sponsors -->
            {(estrellaSponsors.length > 0 || raizSponsors.length > 0) && (
              <div class="text-center">
                <h3 class="font-sans text-2xl font-bold text-accent-gold">Estrella & Raiz Sponsors</h3>
                <div class="mt-8 flex flex-wrap justify-center gap-6">
                  {[...estrellaSponsors, ...raizSponsors].map(sponsor => (
                    <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="group flex h-32 w-full max-w-[200px] items-center justify-center rounded-xl bg-[radial-gradient(circle_at_center,#b5a18d,#ffbd59)] p-4 shadow-md transition-all duration-300 hover:-translate-y-1 hover:bg-[radial-gradient(circle_at_center,#c4b3a1,#ffdb8f)] hover:shadow-2xl">
