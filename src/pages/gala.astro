const solSponsors = sponsors.filter(s => s.tier === 'sol');
const lunaSponsors = sponsors.filter(s => s.tier === 'luna');
const estrellaSponsors = sponsors.filter(s => s.tier === 'estrella');
const raizSponsors = sponsors.filter(s => s.tier === 'raiz');
---

<Layout title="Thank You | Noche Inolvidable Gala | The Latina Sweat Project">
  <Header />
  <main>
    {/* START: Hero Section - Thank You */}
    <section class="relative bg-off-black py-20 text-white sm:py-24 lg:py-32 overflow-hidden">
      {/* Background Image */}
      <div class="absolute inset-0">
        <img src={`${base}images/gala.png`} alt="Noche Inolvidable Gala" class="h-full w-full object-cover object-center opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-t from-off-black via-off-black/80 to-transparent"></div>
