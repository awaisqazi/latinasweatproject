  { name: 'Antique Taco', logo: `${base}images/galalogos/antiquetaco.png`, url: '#', tier: 'raiz' },
  { name: 'Barbi', logo: `${base}images/galalogos/barbi.png`, url: '#', tier: 'raiz' },
  { name: 'Cruz de Fuego Mezcal', logo: `${base}images/galalogos/cruzdefuegomexcal.png`, url: '#', tier: 'raiz' },
  { name: 'DJ Vestus', logo: `${base}images/galalogos/djvestus.png`, url: '#', tier: 'raiz' },
  { name: 'Don Churro', logo: `${base}images/galalogos/donchurro.png`, url: '#', tier: 'raiz' },
  { name: 'Fleet Feet', logo: `${base}images/galalogos/fleetfeet.png`, url: '#', tier: 'raiz' },
  { name: 'Los Valores', logo: `${base}images/galalogos/losvalores.png`, url: '#', tier: 'raiz' },
  { name: 'Oh Snap', logo: `${base}images/galalogos/ohsnap.png`, url: '#', tier: 'raiz' },
  { name: 'Omni', logo: `${base}images/galalogos/omni.png`, url: '#', tier: 'raiz' },
  { name: 'Ponce', logo: `${base}images/galalogos/ponce.png`, url: '#', tier: 'raiz' },
  { name: 'Sacred Agave', logo: `${base}images/galalogos/sacredagave.png`, url: '#', tier: 'raiz' },
  { name: 'Sox', logo: `${base}images/galalogos/sox.png`, url: '#', tier: 'raiz' },
  { name: 'Studio E', logo: `${base}images/galalogos/studioe.png`, url: '#', tier: 'raiz' },
  { name: 'Vestus', logo: `${base}images/galalogos/vestus.png`, url: '#', tier: 'raiz' },
  { name: 'Vida Mia', logo: `${base}images/galalogos/vidamia.png`, url: '#', tier: 'raiz' },
  { name: 'Whisky Prieto', logo: `${base}images/galalogos/whiskyprieto.png`, url: '#', tier: 'raiz' },
  { name: 'Wintrust', logo: `${base}images/galalogos/wintrust.png`, url: '#', tier: 'raiz' },
