<script>
  // Gala Countdown Timer - December 11, 2025 at 6:00 PM CT (Chicago Time)
  function updateHeroCountdown() {
    // Target: December 11, 2025 at 6:00 PM Chicago time (CST = UTC-6)
    const galaDate = new Date('2025-12-11T18:00:00-06:00');
    const now = new Date();
    const diff = galaDate.getTime() - now.getTime();

    const daysEl = document.getElementById('hero-countdown-days');
    const hoursEl = document.getElementById('hero-countdown-hours');
    const minsEl = document.getElementById('hero-countdown-mins');
    const secsEl = document.getElementById('hero-countdown-secs');

    if (!daysEl || !hoursEl || !minsEl || !secsEl) return;

    if (diff <= 0) {
      // Event has started or passed
      daysEl.textContent = '0';
      hoursEl.textContent = '0';
      minsEl.textContent = '0';
      secsEl.textContent = '0';
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const mins = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const secs = Math.floor((diff % (1000 * 60)) / 1000);

    daysEl.textContent = String(days);
    hoursEl.textContent = String(hours).padStart(2, '0');
    minsEl.textContent = String(mins).padStart(2, '0');
    secsEl.textContent = String(secs).padStart(2, '0');
  }

  // Initial call and set interval
  updateHeroCountdown();
  setInterval(updateHeroCountdown, 1000);
</script>

