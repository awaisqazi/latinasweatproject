<script>
  // Type declarations for YouTube IFrame API
  declare namespace YT {
    class Player {
      constructor(elementId: string, options?: object);
      mute(): void;
      unMute(): void;
      isMuted(): boolean;
      setVolume(volume: number): void;
    }
  }
  declare global {
    interface Window {
      onYouTubeIframeAPIReady: () => void;
    }
  }

  // YouTube IFrame API for mute/unmute control
  let player: YT.Player | null = null;
  let isMuted = true;

  // Load YouTube IFrame API
  const tag = document.createElement("script");
  tag.src = "https://www.youtube.com/iframe_api";
  const firstScriptTag = document.getElementsByTagName("script")[0];
  firstScriptTag.parentNode?.insertBefore(tag, firstScriptTag);

  // @ts-ignore - YouTube API callback
  window.onYouTubeIframeAPIReady = function () {
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // @ts-ignore
      player = new YT.Player("hero-video", {
        events: {
          onReady: onPlayerReady,
        },
      });
    }
  };

  function onPlayerReady() {
    // Player is ready
  }

  // Mute/unmute button functionality
  const unmuteBtn = document.getElementById("unmute-btn");
  const soundOffIcon = document.getElementById("sound-off-icon");
  const soundOnIcon = document.getElementById("sound-on-icon");
  const soundText = document.getElementById("sound-text");
  const contentOverlay = document.getElementById("content-overlay");
  const gradientOverlay = document.getElementById("video-gradient-overlay");
  const videoContainer = document.getElementById("video-container");

  function hideOverlays() {
    // Fade out the overlays and disable pointer events so video is interactive
    contentOverlay?.classList.add("opacity-0", "pointer-events-none");
    gradientOverlay?.classList.add("opacity-0", "pointer-events-none");

    // Update iframe to show controls and resize to fit properly
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // Switch to contained video mode so controls are visible
      iframe.classList.remove(
        "w-[177.78vh]",
        "min-w-full",
        "h-[56.25vw]",
        "min-h-full",
        "top-1/2",
        "left-1/2",
        "-translate-x-1/2",
        "-translate-y-1/2",
      );
      iframe.classList.add(
        "w-full",
        "h-full",
        "top-0",
        "left-0",
        "translate-x-0",
        "translate-y-0",
      );

      // Add padding to container for controls visibility
      videoContainer?.classList.add(
        "flex",
        "items-center",
        "justify-center",
        "p-4",
        "sm:p-8",
      );

      // Update src with controls
      let newSrc = iframe.src
        .replace("controls=0", "controls=1")
        .replace("mute=1", "mute=0");
      iframe.src = newSrc;
    }
  }

  function showOverlays() {
    // Fade in the overlays and restore pointer events
    contentOverlay?.classList.remove("opacity-0", "pointer-events-none");
    gradientOverlay?.classList.remove("opacity-0", "pointer-events-none");

    // Update iframe to hide controls and restore cover mode
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // Switch back to cover mode
      iframe.classList.remove(
        "w-full",
        "h-full",
        "top-0",
        "left-0",
        "translate-x-0",
        "translate-y-0",
      );
      iframe.classList.add(
        "w-[177.78vh]",
        "min-w-full",
        "h-[56.25vw]",
        "min-h-full",
        "top-1/2",
        "left-1/2",
        "-translate-x-1/2",
        "-translate-y-1/2",
      );

      // Remove padding from container
      videoContainer?.classList.remove(
        "flex",
        "items-center",
        "justify-center",
        "p-4",
        "sm:p-8",
      );

      // Update src without controls
      let newSrc = iframe.src
        .replace("controls=1", "controls=0")
        .replace("mute=0", "mute=1");
      iframe.src = newSrc;
    }
  }

  if (unmuteBtn) {
    unmuteBtn.addEventListener("click", () => {
      if (isMuted) {
        // User wants to watch with sound
        isMuted = false;
        soundOffIcon?.classList.add("hidden");
        soundOnIcon?.classList.remove("hidden");
        if (soundText) soundText.textContent = "Return to Overview";
        hideOverlays();
      } else {
        // User wants to go back to overview
        isMuted = true;
        soundOffIcon?.classList.remove("hidden");
        soundOnIcon?.classList.add("hidden");
        if (soundText) soundText.textContent = "Watch with Sound";
        showOverlays();
      }
    });
  }

  // Board Navigation System
  function initBoardNavigation() {
    const sidebar = document.getElementById("board-sidebar");
    const navContent = document.getElementById("nav-content");
    const toggleBtn = document.getElementById("sidebar-toggle");
    const toggleIconShow = document.getElementById("toggle-icon-show");
    const toggleIconHide = document.getElementById("toggle-icon-hide");
    const navLinks = document.querySelectorAll(".board-nav-link");
    const indicator = document.getElementById("nav-indicator");
    const heroSection = document.querySelector(
      "section.relative.w-full.h-screen",
    );

    // Get all board sections by ID
    const sectionIds = [
      "board-of-directors",
      "junior-board",
      "community-programming",
      "instructor-development",
      "advancement-partnerships",
      "brand-visibility",
      "culture-ethics",
      "community-impact",
      "queer-events",
      "web-data-ai",
    ];
    const sections = sectionIds
      .map((id) => document.getElementById(id))
      .filter(Boolean) as HTMLElement[];

    if (!sidebar || !sections.length || !navLinks.length) return;

    let isCollapsed = false;
    let currentSectionIndex = 0;
    let isScrolling = false;

    // Toggle sidebar collapsed state
    toggleBtn?.addEventListener("click", () => {
      isCollapsed = !isCollapsed;
      sidebar.classList.toggle("collapsed", isCollapsed);

      if (isCollapsed) {
        toggleIconShow?.classList.remove("hidden");
        toggleIconHide?.classList.add("hidden");
      } else {
        toggleIconShow?.classList.add("hidden");
        toggleIconHide?.classList.remove("hidden");
      }
    });

    // Show/hide sidebar based on scroll position (hide over hero)
    function updateSidebarVisibility() {
      if (!sidebar) return;

      if (!heroSection) {
        sidebar.classList.remove("hidden-over-hero");
        return;
      }

      const heroRect = heroSection.getBoundingClientRect();
      const isPastHero = heroRect.bottom < 100;

      if (isPastHero) {
        sidebar.classList.remove("hidden-over-hero");
      } else {
        sidebar.classList.add("hidden-over-hero");
      }
    }

    // Update active section indicator
    function updateActiveSection(sectionId: string) {
      navLinks.forEach((link, index) => {
        const linkSection = link.getAttribute("data-section");
        if (linkSection === sectionId) {
          link.classList.add("active");
          // Move indicator
          if (indicator && navContent) {
            const linkElement = link as HTMLElement;
            const navList = navContent.querySelector("ul");
            if (navList) {
              const linkRect = linkElement.getBoundingClientRect();
              const navRect = navList.getBoundingClientRect();
              indicator.style.transform = `translateY(${linkRect.top - navRect.top}px)`;
            }
          }
        } else {
          link.classList.remove("active");
        }
      });
    }

    // Find current section based on scroll position
    function getCurrentSectionIndex(): number {
      for (let i = sections.length - 1; i >= 0; i--) {
        const section = sections[i];
        const rect = section.getBoundingClientRect();
        if (rect.top <= 150) {
          return i;
        }
      }
      return 0;
    }

    // Scroll to a specific section with smooth animation
    function scrollToSection(index: number) {
      if (index < 0 || index >= sections.length || isScrolling) return;

      isScrolling = true;
      currentSectionIndex = index;
      const section = sections[index];

      // Smooth scroll animation
      section.scrollIntoView({ behavior: "smooth", block: "start" });
      updateActiveSection(sectionIds[index]);

      // Reset scrolling flag after animation completes
      setTimeout(() => {
        isScrolling = false;
      }, 800);
    }

    // Handle wheel events for snap scrolling
    let wheelTimeout: number;
    let accumulatedDelta = 0;
    const SCROLL_THRESHOLD = 50;

    function handleWheel(e: WheelEvent) {
      // Only snap when in the boards area
      const heroRect = heroSection?.getBoundingClientRect();
      if (heroRect && heroRect.bottom > 0) return; // Still in hero

      // Accumulate scroll delta
      accumulatedDelta += e.deltaY;

      clearTimeout(wheelTimeout);
      wheelTimeout = window.setTimeout(() => {
        if (Math.abs(accumulatedDelta) > SCROLL_THRESHOLD) {
          const currentIdx = getCurrentSectionIndex();

          if (accumulatedDelta > 0 && currentIdx < sections.length - 1) {
            // Scroll down
            e.preventDefault();
            scrollToSection(currentIdx + 1);
          } else if (accumulatedDelta < 0 && currentIdx > 0) {
            // Scroll up
            e.preventDefault();
            scrollToSection(currentIdx - 1);
          }
        }
        accumulatedDelta = 0;
      }, 50);
    }

    // Handle nav link clicks
    navLinks.forEach((link, index) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("data-section");

        if (targetId) {
          const targetIndex = sectionIds.indexOf(targetId);
          if (targetIndex !== -1) {
            scrollToSection(targetIndex);
          }
        }
      });
    });

    // Handle keyboard navigation (arrow keys)
    function handleKeydown(e: KeyboardEvent) {
      // Only respond when in boards area
      const heroRect = heroSection?.getBoundingClientRect();
      if (heroRect && heroRect.bottom > 0) return;

      if (e.key === "ArrowDown" || e.key === "PageDown") {
        e.preventDefault();
        const currentIdx = getCurrentSectionIndex();
        if (currentIdx < sections.length - 1) {
          scrollToSection(currentIdx + 1);
        }
      } else if (e.key === "ArrowUp" || e.key === "PageUp") {
        e.preventDefault();
        const currentIdx = getCurrentSectionIndex();
        if (currentIdx > 0) {
          scrollToSection(currentIdx - 1);
        }
      }
    }

    // Listen for scroll to update sidebar visibility and active section
    window.addEventListener(
      "scroll",
      () => {
        updateSidebarVisibility();

        if (!isScrolling) {
          const currentIdx = getCurrentSectionIndex();
          updateActiveSection(sectionIds[currentIdx]);
        }
      },
      { passive: true },
    );

    // Add wheel listener for snap scrolling
    window.addEventListener("wheel", handleWheel, { passive: false });

    // Add keyboard listener
    window.addEventListener("keydown", handleKeydown);

    // Initial state
    updateSidebarVisibility();

    // Set initial active section - default to first board section
    const heroRect = heroSection?.getBoundingClientRect();
    if (heroRect && heroRect.bottom < window.innerHeight) {
      updateActiveSection("board-of-directors");
    }
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", initBoardNavigation);
</script>
