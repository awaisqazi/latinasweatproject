<script>
  // Type declarations for YouTube IFrame API
  declare namespace YT {
    class Player {
      constructor(elementId: string, options?: object);
      mute(): void;
      unMute(): void;
      isMuted(): boolean;
      setVolume(volume: number): void;
    }
  }
  declare global {
    interface Window {
      onYouTubeIframeAPIReady: () => void;
    }
  }

  // YouTube IFrame API for mute/unmute control
  let player: YT.Player | null = null;
  let isMuted = true;

  // Load YouTube IFrame API
  const tag = document.createElement("script");
  tag.src = "https://www.youtube.com/iframe_api";
  const firstScriptTag = document.getElementsByTagName("script")[0];
  firstScriptTag.parentNode?.insertBefore(tag, firstScriptTag);

  // @ts-ignore - YouTube API callback
  window.onYouTubeIframeAPIReady = function () {
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // @ts-ignore
      player = new YT.Player("hero-video", {
        events: {
          onReady: onPlayerReady,
        },
      });
    }
  };

  function onPlayerReady() {
    // Player is ready
  }

  // Mute/unmute button functionality
  const unmuteBtn = document.getElementById("unmute-btn");
  const soundOffIcon = document.getElementById("sound-off-icon");
  const soundOnIcon = document.getElementById("sound-on-icon");
  const soundText = document.getElementById("sound-text");
  const contentOverlay = document.getElementById("content-overlay");
  const gradientOverlay = document.getElementById("video-gradient-overlay");
  const videoContainer = document.getElementById("video-container");

  function hideOverlays() {
    // Fade out the overlays and disable pointer events so video is interactive
    contentOverlay?.classList.add("opacity-0", "pointer-events-none");
    gradientOverlay?.classList.add("opacity-0", "pointer-events-none");

    // Update iframe to show controls and resize to fit properly
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // Switch to contained video mode so controls are visible
      iframe.classList.remove(
        "w-[177.78vh]",
        "min-w-full",
        "h-[56.25vw]",
        "min-h-full",
        "top-1/2",
        "left-1/2",
        "-translate-x-1/2",
        "-translate-y-1/2",
      );
      iframe.classList.add(
        "w-full",
        "h-full",
        "top-0",
        "left-0",
        "translate-x-0",
        "translate-y-0",
      );

      // Add padding to container for controls visibility
      videoContainer?.classList.add(
        "flex",
        "items-center",
        "justify-center",
        "p-4",
        "sm:p-8",
      );

      // Update src with controls
      let newSrc = iframe.src
        .replace("controls=0", "controls=1")
        .replace("mute=1", "mute=0");
      iframe.src = newSrc;
    }
  }

  function showOverlays() {
    // Fade in the overlays and restore pointer events
    contentOverlay?.classList.remove("opacity-0", "pointer-events-none");
    gradientOverlay?.classList.remove("opacity-0", "pointer-events-none");

    // Update iframe to hide controls and restore cover mode
    const iframe = document.getElementById("hero-video") as HTMLIFrameElement;
    if (iframe) {
      // Switch back to cover mode
      iframe.classList.remove(
        "w-full",
        "h-full",
        "top-0",
        "left-0",
        "translate-x-0",
        "translate-y-0",
      );
      iframe.classList.add(
        "w-[177.78vh]",
        "min-w-full",
        "h-[56.25vw]",
        "min-h-full",
        "top-1/2",
        "left-1/2",
        "-translate-x-1/2",
        "-translate-y-1/2",
      );

      // Remove padding from container
      videoContainer?.classList.remove(
        "flex",
        "items-center",
        "justify-center",
        "p-4",
        "sm:p-8",
      );

      // Update src without controls
      let newSrc = iframe.src
        .replace("controls=1", "controls=0")
        .replace("mute=0", "mute=1");
      iframe.src = newSrc;
    }
  }

  if (unmuteBtn) {
    unmuteBtn.addEventListener("click", () => {
      if (isMuted) {
        // User wants to watch with sound
        isMuted = false;
        soundOffIcon?.classList.add("hidden");
        soundOnIcon?.classList.remove("hidden");
        if (soundText) soundText.textContent = "Return to Overview";
        hideOverlays();
      } else {
        // User wants to go back to overview
        isMuted = true;
        soundOffIcon?.classList.remove("hidden");
        soundOnIcon?.classList.add("hidden");
        if (soundText) soundText.textContent = "Watch with Sound";
        showOverlays();
      }
    });
  }

  // Board Filter Navigation System
  function initBoardFilter() {
    const pills = document.querySelectorAll(".pill-btn");
    const grid = document.getElementById("members-grid");
    if (!grid || pills.length === 0) return;

    // Convert to array so we can sort
    const allItems = Array.from(
      grid.querySelectorAll(".filter-item"),
    ) as HTMLElement[];

    function filterGrid(boardId: string) {
      // Setup active state for pills
      pills.forEach((pill) => {
        if (pill.getAttribute("data-filter") === boardId) {
          pill.classList.remove("bg-white/10");
          pill.classList.add(
            "bg-vibrant-pink",
            "shadow-lg",
            "shadow-vibrant-pink/30",
          );
        } else {
          pill.classList.add("bg-white/10");
          pill.classList.remove(
            "bg-vibrant-pink",
            "shadow-lg",
            "shadow-vibrant-pink/30",
          );
        }
      });

      const matchedItems: HTMLElement[] = [];
      const hiddenItems: HTMLElement[] = [];

      allItems.forEach((item) => {
        const itemBoard = item.getAttribute("data-board");

        if (boardId === "all" || itemBoard === boardId) {
          matchedItems.push(item);
        } else {
          hiddenItems.push(item);
        }
      });

      // Sort matched items: Leadership goes first!
      matchedItems.sort((a, b) => {
        // Headers get priority 2, Leadership gets priority 1, Regular gets 0
        const aLeader =
          a.getAttribute("data-leadership") === "header"
            ? 2
            : a.getAttribute("data-leadership") === "true"
              ? 1
              : 0;
        const bLeader =
          b.getAttribute("data-leadership") === "header"
            ? 2
            : b.getAttribute("data-leadership") === "true"
              ? 1
              : 0;

        if (boardId !== "all") {
          return bLeader - aLeader;
        }

        return 0;
      });

      // Layout shift without removing nodes (preserves Svelte component hydration)
      allItems.forEach((item) => {
        item.style.opacity = "0";
        item.style.transform = "scale(0.95)";
        item.style.pointerEvents = "none";
      });

      setTimeout(() => {
        matchedItems.forEach((item, index) => {
          item.style.display = "block"; // Make sure it's block so we can see it
          item.style.position = "relative";
          item.style.order = index.toString(); // Use flex/grid order for sorting

          // small timeout to allow display:block to calculate layout before scaling up
          setTimeout(() => {
            item.style.opacity = "1";
            item.style.transform = "scale(1)";
            item.style.pointerEvents = "auto";
          }, 50);
        });

        hiddenItems.forEach((item) => {
          item.style.display = "none";
          item.style.position = "absolute";
        });
      }, 300); // Wait for fade out
    }

    // Attach click listeners
    pills.forEach((pill) => {
      pill.addEventListener("click", () => {
        const filter = pill.getAttribute("data-filter");
        if (filter) {
          filterGrid(filter);
        }
      });
    });

    // Init the grid with 'all' layout but ensure CSS defaults are set
    allItems.forEach((item) => {
      item.style.transition =
        "all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)";
    });
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    initBoardFilter();

    // Junior Board card expand/collapse â€” M3 Multi-Browse Carousel
    const jbCards = document.querySelectorAll(
      ".jb-card",
    ) as NodeListOf<HTMLElement>;
    let expandedIdx = -1;

    jbCards.forEach((card) => {
      card.addEventListener("click", () => {
        const idx = parseInt(card.getAttribute("data-index") || "-1");
        const track = document.querySelector(".jb-track") as HTMLElement;

        if (expandedIdx === idx) {
          // Collapse â€” restore all cards to equal size
          expandedIdx = -1;
          track?.classList.remove("has-expanded");
          jbCards.forEach((c) => {
            c.classList.remove("jb-expanded", "jb-neighbor");
            const bio = c.querySelector(".jb-bio") as HTMLElement;
            const hint = c.querySelector(".jb-hint") as HTMLElement;
            if (bio) bio.style.maxHeight = "0";
            if (hint) hint.textContent = "Tap to read bio";
          });
        } else {
          // Expand this card
          expandedIdx = idx;
          track?.classList.add("has-expanded");
          jbCards.forEach((c, cIdx) => {
            const bio = c.querySelector(".jb-bio") as HTMLElement;
            const hint = c.querySelector(".jb-hint") as HTMLElement;
            if (c === card) {
              c.classList.add("jb-expanded");
              c.classList.remove("jb-neighbor");
              if (bio) bio.style.maxHeight = bio.scrollHeight + "px";
              if (hint) hint.textContent = "Tap to close";
            } else {
              c.classList.remove("jb-expanded");
              c.classList.add("jb-neighbor");
              if (bio) bio.style.maxHeight = "0";
              if (hint) hint.textContent = "Tap to read bio";
            }
          });
        }
      });
    });
  });
