---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
const base = import.meta.env.BASE_URL;

const instructors = [
    { name: "Jay", image: "jay.png" },
    { name: "Brenda", image: "brenda.png" },
    { name: "Eli", image: "eli.png" },
    { name: "Margarita", image: "margarita.png" },
];

const schedule = [
    {
        date: "Monday Dec 1",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "7am", instructor: "Brenda" },
        ],
        focus: "UPPER BODY",
    },
    {
        date: "Tuesday Dec 2",
        classes: [
            { time: "6am", instructor: "Eli" },
            { time: "7am", instructor: "Brenda" },
        ],
        focus: "LOWER BODY",
    },
    {
        date: "Wednesday Dec 3",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "7am", instructor: "Brenda" },
        ],
        focus: "FULL BODY",
    },
    {
        date: "Thursday Dec 4",
        classes: [
            { time: "6am", instructor: "Eli" },
            { time: "7am", instructor: "Brenda" },
        ],
        focus: "UPPER BODY",
    },
    {
        date: "Friday Dec 5",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "7am", instructor: "Brenda" },
        ],
        focus: "LOWER BODY",
    },
    {
        date: "Saturday Dec 6",
        classes: [
            { time: "8am", instructor: "Eli" },
            { time: "9:15am", instructor: "Ashley" },
        ],
        focus: "FULL BODY",
    },
    {
        date: "Sunday Dec 7",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "9:15am", instructor: "Margarita" },
        ],
        focus: "UPPER BODY",
    },
    {
        date: "Monday Dec 8",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "7am", instructor: "Margarita" },
        ],
        focus: "LOWER BODY",
    },
    {
        date: "Tuesday Dec 9",
        classes: [
            { time: "6am", instructor: "Eli" },
            { time: "7am", instructor: "Margarita" },
        ],
        focus: "FULL BODY",
    },
    {
        date: "Wednesday Dec 10",
        classes: [
            { time: "6am", instructor: "Jay" },
            { time: "7am", instructor: "Margarita" },
        ],
        focus: "UPPER BODY",
    },
    {
        date: "Thursday Dec 11",
        classes: [
            { time: "6am", instructor: "Eli" },
            { time: "7am", instructor: "Margarita" },
        ],
        focus: "LOWER BODY",
    },
];
---

<Layout title="Gala Bootcamp | The Latina Sweat Project">
    <Header />
    <main class="bg-off-black text-white">
        {/* Hero Section */}
        <section class="relative overflow-hidden py-20 sm:py-32">
            <div class="absolute inset-0 z-0 opacity-20">
                <img
                    src="https://images.pexels.com/photos/841130/pexels-photo-841130.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                    alt="Background"
                    class="h-full w-full object-cover"
                />
            </div>
            <div
                class="relative z-10 mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8"
            >
                <h1
                    class="font-sans text-5xl font-extrabold tracking-tight text-accent-gold sm:text-7xl drop-shadow-lg"
                >
                    GALA BOOTCAMP
                </h1>
                <p
                    class="mt-6 font-sans text-2xl font-bold text-white sm:text-3xl"
                >
                    Dec 1-11 <span class="mx-2 text-vibrant-pink">|</span> 6am &
                    7am
                </p>
                <div
                    class="mt-10 flex flex-col items-center justify-center gap-6"
                >
                    <a
                        href="#"
                        class="rounded-full bg-vibrant-pink px-8 py-4 text-xl font-bold text-white shadow-lg transition hover:scale-105 hover:bg-accent-gold focus:outline-none focus:ring-2 focus:ring-vibrant-pink focus:ring-offset-2 focus:ring-offset-off-black"
                    >
                        $100 to Participate
                    </a>
                    <div
                        class="max-w-md rounded-xl bg-white/10 p-6 backdrop-blur-sm border border-white/20"
                    >
                        <p class="text-lg font-medium text-white">
                            Already a member?
                        </p>
                        <p class="mt-2 text-sm text-gray-300">
                            You can sign up for classes directly on our <a
                                href={`${base}schedule`}
                                class="text-accent-gold underline hover:text-vibrant-pink font-bold"
                                >Schedule page</a
                            > using your existing membership!
                        </p>
                    </div>
                </div>
            </div>
        </section>

        {/* Details Section */}
        <section class="bg-zinc-900 py-16">
            <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
                <h2
                    class="font-sans text-3xl font-bold text-vibrant-pink sm:text-4xl"
                >
                    The Challenge
                </h2>
                <div class="mt-10 grid gap-8 sm:grid-cols-2">
                    <div
                        class="rounded-2xl bg-off-black p-8 shadow-xl border border-zinc-800"
                    >
                        <p class="text-4xl font-bold text-accent-gold">
                            15 Classes
                        </p>
                        <p class="mt-2 text-xl font-medium text-white">
                            GALA ENTRY
                        </p>
                        <p class="mt-4 text-gray-400">
                            Complete 15 classes during the bootcamp to earn your
                            ticket to the gala.
                        </p>
                    </div>
                    <div
                        class="rounded-2xl bg-off-black p-8 shadow-xl border border-zinc-800 relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 right-0 bg-vibrant-pink text-white text-xs font-bold px-3 py-1 rounded-bl-lg"
                        >
                            ULTIMATE GOAL
                        </div>
                        <p class="text-4xl font-bold text-accent-gold">
                            22 Classes
                        </p>
                        <p class="mt-2 text-xl font-medium text-white">
                            MONEY BACK + GALA ENTRY
                        </p>
                        <p class="mt-4 text-gray-400">
                            Complete all 22 classes to get your $100 buy-in back
                            AND a gala ticket!
                        </p>
                    </div>
                </div>
                <p class="mt-12 text-lg text-gray-400">
                    Bootcamp classes will be open to members and walk-ins as
                    regularly scheduled programming.
                    <span class="text-white font-bold"
                        >You must buy in to the challenge to participate in the
                        rewards.</span
                    >
                </p>
            </div>
        </section>

        {/* Instructors Section */}
        <section class="py-16 bg-off-black">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <h2
                    class="text-center font-sans text-3xl font-bold text-white sm:text-4xl mb-12"
                >
                    Meet Your Instructors
                </h2>
                <div class="grid grid-cols-2 gap-6 sm:grid-cols-4">
                    {
                        instructors.map((instructor) => (
                            <div class="group relative overflow-hidden rounded-xl bg-zinc-900">
                                <div class="aspect-[3/4] w-full overflow-hidden">
                                    <img
                                        src={`${base}images/bootcamp/${instructor.image}`}
                                        alt={instructor.name}
                                        class="h-full w-full object-cover transition duration-300 group-hover:scale-110"
                                    />
                                </div>
                                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 to-transparent p-4">
                                    <p class="text-center text-xl font-bold text-white">
                                        {instructor.name}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        {/* Schedule Section */}
        <section class="py-16 bg-zinc-900">
            <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
                <h2
                    class="text-center font-sans text-3xl font-bold text-vibrant-pink sm:text-4xl mb-12"
                >
                    Bootcamp Schedule
                </h2>

                <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    {
                        schedule.map((day) => (
                            <div class="rounded-xl bg-off-black p-6 shadow-lg border border-zinc-800 hover:border-vibrant-pink/50 transition duration-300">
                                <div class="flex items-center justify-between mb-4">
                                    <h3 class="text-lg font-bold text-white">
                                        {day.date}
                                    </h3>
                                </div>

                                <div class="space-y-3 mb-4">
                                    {day.classes.map((cls) => (
                                        <div class="flex items-center justify-between text-gray-300">
                                            <span class="font-mono text-accent-gold">
                                                {cls.time}
                                            </span>
                                            <span class="font-medium">
                                                {cls.instructor}
                                            </span>
                                        </div>
                                    ))}
                                </div>

                                <div class="pt-4 border-t border-zinc-800">
                                    <span class="inline-block rounded-full bg-vibrant-pink/20 px-3 py-1 text-xs font-bold text-vibrant-pink tracking-wider">
                                        {day.focus}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>
